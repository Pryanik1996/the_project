<div class="container h-100" style="width: 550px; margin-top: 30px;">
  <div class="row h-100 justify-content-center align-items-center">
    <div id="form" class="col-10 col-md-8 col-lg-6 w-50px">
      <form class="signup-form" action="/users/registration" method="POST">
        <div class="form-group mt-5">
          <input type="text" name="name" class="form-control" placeholder="Имя" required>
        </div>
        <div class="form-group mt-5">
          <input type="email" name="email" class="form-control" placeholder="Электронная почта" required>
        </div>
        <div class="form-group mt-5">
          <input type="password" name="password" class="form-control" placeholder="Пароль" required>
        </div>
        <div class="text-center mt-5" style="margin-top: 15px;">
          <button type="submit" class="btn btn-secondary">&nbsp; Создать профиль &nbsp;</button>
        </div>
      </form>
    </div>
  </div>
</div>
